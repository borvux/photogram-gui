<h1>List of photos</h1>

<form action="/insert_photo">
  <label for="image_input">Image</label>
  <input id="image_input" name="query_image">

  <label for="caption_input">Caption</label>
  <textarea id="caption_input" name="query_caption"></textarea>

  <label for="owner_id_input">Owner ID</label>
  <input id="owner_id_input" name="query_owner_id">

  <button>Add photo</button>
</form>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @all_photos.each do | a_photo | %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>
    <td>
      <%= a_photo.caption %>
    </td>
    <td>
      <%= a_photo.poster.username %>
    </td>
    <td>
      <%= a_photo.created_at %>
    </td>
    <td><a href="/photos/<%= a_photo.id %>">Show details</td>
  </tr>
  <% end %>
</table>
